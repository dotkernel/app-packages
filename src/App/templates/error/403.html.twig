{% extends '@layout/default.html.twig' %}

{% block title %}{{ status }} {{ reason }}{% endblock %}

{% block content %}
    <div class="page-intro">
        <div class="container">
            <p class="welcome">Oops!</p>
            <h1>This is awkward.</h1>
            <p><b>We encountered a {{ status }} {{ reason }} error.</b></p>
            <p>
                You don't have enough permissions to view this page. You can <a href="{{ path('logout') }}">Sign out</a>
                and try with a more permissive user. <br/>
                Another reason for this error could be that the page you want to access is not available for
                authenticated
                users. You should <a href="{{ path('logout') }}">Sign out</a> before and try again.
            </p>
        </div>
    </div>
{% endblock %}
